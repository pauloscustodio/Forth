//-----------------------------------------------------------------------------
// CORE
//-----------------------------------------------------------------------------

// Variables
"PAD",			PAD,			0,		f_pad()

// Memory access
"!",			STORE,			0,		f_store()
"@",			FETCH,			0,		f_fetch()
"C!",			C_STORE,		0,		f_c_store()
"C@",			C_FETCH,		0,		f_c_fetch()

// Stack manipulation


".", 			DOT, 			0, 		cout << pop() << BL
"THROW", 		THROW, 			0, 		error(static_cast<Error>(pop()))
"DROP", 		DROP, 			0, 		pop()
"DUP", 			DUP, 			0, 		push(peek(0))
"PICK", 		PICK, 			0, 		push(peek(pop()))
"+", 			PLUS, 			0, 		push(pop()+pop())
"WORDS", 		WORDS, 			0, 		f_words()
"ENVIRONMENT?", ENVIRONMENT_Q, 	0, 		vm.f_environment_q()

//-----------------------------------------------------------------------------
// STRINGS
//-----------------------------------------------------------------------------

"TYPE",			TYPE,			0,		vm.f_type()
"COUNT",		COUNT,			0,		f_count()
"S""",			S_QUOTE,		0,		vm.f_s_quote()

//-----------------------------------------------------------------------------
// TOOLS
//-----------------------------------------------------------------------------

".S", 			DOT_S, 			0, 		vm.stack->print()

